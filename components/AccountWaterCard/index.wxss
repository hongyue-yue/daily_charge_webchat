.water-card{
  margin-top:20rpx;
  padding:20rpx;
  background-color:#fff;
  border-radius:5rpx;
  display: flex;
  align-items:center
}
.card-icon{
  width:55rpx;
  height:55rpx;
  display:inline-block;
  background-repeat: no-repeat;
  background-size:100%;
}
.today-icon{
  background-image: url('data:image/png;base64,');
}
.card-text{
  flex:1;
  display:flex;
  flex-direction:column;
  padding:0 20rpx;
  font-size:14px;
}
.card-amount{
  font-size:12px;
  color:#ccc
}
.card-spending{
  float:right;
  color:green
}
.card-earning{
  float:right;
  color:#ff5722
}
.card-arrow{
  width:45rpx;
  height:50rpx;
  display:inline-block;
  background-repeat: no-repeat;
  background-size:100%;
  background-image: url('data:image/png;base64,');
}